<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <!-- Configure NameSpace for action web -->
    <package name="subjectadmin" namespace="/subjectadmin"
        extends="default-web">

        <action name="createsubject" class="SubjectAdmin" method="createSubject">
            <result name="success">Subject.CreateSubject</result>
            <result name="error">HomePage</result>
        </action>

        <action name="viewallsubject" class="SubjectAdmin"
            method="viewAllSubject">
            <result name="success">Subject.ViewAllSubjects</result>
            <result name="error">HomePage</result>
        </action>

        <action name="deletesubject" class="SubjectAdmin" method="deleteSubject">
            <result name="success">Subject.ViewAllSubjects</result>
            <result name="error">HomePage</result>
        </action>

        <action name="updatesubject" class="SubjectAdmin" method="updateSubject">
            <result name="success">Subject.UpdateSubject</result>
            <result name="error">Subject.ViewAllSubjects</result>
        </action>

        <action name="viewsubjectdetails" class="SubjectAdmin"
            method="viewSubjectDetails">
            <result name="success">Subject.ViewSubjectDetails
            </result>
            <result name="error">HomePage</result>
        </action>

    </package>

</struts>
