<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configure NameSpace for action web -->
    <package name="courseadmin" namespace="/courseadmin"
        extends="default-web">
        <action name="viewallcourse" class="CourseAdmin" method="viewAllCourse">
            <result name="success">Course.ViewAllCourse</result>
            <result name="error">HomePage</result>
        </action>
        <action name="viewcoursedetails" class="CourseAdmin"
            method="viewCourseDetails">
            <result name="success">Course.ViewCourseDetails</result>
            <result name="error">HomePage</result>
        </action>
        <action name="removesubject*" class="CourseAdmin" method="removeSubject">
            <param name="courseSubject.courseSubjectId">{1}</param>
            <result name="success" type="redirect">
                <param name="location">courseadmin/viewcoursedetails?currentCourse.courseId=${courseSubject.course.courseId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>
        <action name="addsubject" class="CourseAdmin" method="addSubject">
            <result name="success" type="redirect">
                <param name="location">courseadmin/viewcoursedetails?currentCourse.courseId=${currentCourse.courseId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>
        <action name="addusertocourse" class="CourseAdmin"
            method="addUserToCourse">
            <result name="success" type="redirect">
                <param name="location">courseadmin/viewcoursedetails?currentCourse.courseId=${currentCourse.courseId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>
        <action name="removeuserfromcourse" class="CourseAdmin"
            method="removeUserFromCourse">
            <result name="success" type="redirect">
                <param name="location">courseadmin/viewcoursedetails?currentCourse.courseId=${currentCourse.courseId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>
        <action name="startcourse" class="CourseAdmin" method="startCourse">
            <result name="success" type="redirect">
                <param name="location">courseadmin/viewcoursedetails?currentCourse.courseId=${currentCourse.courseId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>
        <action name="finishcourse" class="CourseAdmin" method="finishCourse">
            <result name="success" type="redirect">
                <param name="location">courseadmin/viewallcourse</param>
            </result>
            <result name="error">HomePage</result>
        </action>
        <action name="createcourse" class="CourseAdmin" method="createCourse">
            <result name="success">Course.CreateCourse</result>
            <result name="error">HomePage</result>
        </action>
    </package>
    <package name="courseuser" namespace="/courseuser" extends="default-web">
        <action name="viewallcourse" class="CourseUser" method="viewAllCourse">
            <result name="success">Course.ViewAllCourse</result>
            <result name="error">HomePage</result>
        </action>
        <action name="viewcoursedetails" class="CourseUser"
            method="viewCourseDetails">
            <result name="success">Course.ViewCourseDetails</result>
            <result name="error">HomePage</result>
        </action>
    </package>
</struts>