<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <!-- Configure NameSpace for action web -->
    <package name="taskadmin" namespace="/taskadmin" extends="default-web">

        <action name="removetask" class="TaskAdmin" method="removeTask">
            <result name="success" type="redirect">
                <param name="location">/subjectadmin/viewsubjectdetails?subject.subjectId=${task.subject.subjectId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>

        <action name="addtask" class="TaskAdmin" method="createTask">
            <result name="success" type="redirect">
                <param name="location">/subjectadmin/viewsubjectdetails?subject.subjectId=${subject.subjectId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>

    </package>

    <package name="taskuser" namespace="/taskuser" extends="default-web">

        <action name="finishtask" class="TaskUser" method="finishTask">
            <result type="redirect">
                <param name="location">/subjectuser/viewsubjectdetails?userSubject.userCourseSubjectId=${userSubject.userCourseSubjectId}</param>
            </result>
            <result name="error">HomePage</result>
        </action>

    </package>
</struts>
