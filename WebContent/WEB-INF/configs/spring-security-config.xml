<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/courseadmin/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/subjectadmin/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/accountadmin/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/courseuser/**" access="hasRole('ROLE_USER')" />

        <access-denied-handler error-page="/" />

        <form-login login-page="/sign/signin"
            authentication-failure-url="/sign/signin?error=true"
            username-parameter="email" password-parameter="password" />
        <logout logout-success-url="/sign/signin?logout" />

        <remember-me key="remember-tms_62" />
    </http>

    <authentication-manager erase-credentials="false">
        <authentication-provider
            user-service-ref="AccountDetailsService">
        </authentication-provider>
    </authentication-manager>
</beans:beans>