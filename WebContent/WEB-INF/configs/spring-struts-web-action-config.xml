<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="HomepageAction" class="tms62.action.homepage.HomepageAction"
        scope="prototype">
    </bean>

    <bean id="Authentication" class="tms62.action.authentication.SigninAction"
        scope="prototype">
        <property name="userBusiness" ref="UserBusiness"></property>
    </bean>

    <bean id="CourseAdmin" class="tms62.action.admin.course.CourseAction"
        scope="prototype">
        <property name="adminBusiness" ref="AdminBusiness"></property>
    </bean>

    <bean id="CourseUser" class="tms62.action.user.course.CourseAction"
        scope="prototype">
        <property name="userBusiness" ref="UserBusiness"></property>
    </bean>

    <bean id="AccountAdmin" class="tms62.action.admin.account.AccountAction"
        scope="prototype">
        <property name="adminBusiness" ref="AdminBusiness"></property>
    </bean>

</beans>
